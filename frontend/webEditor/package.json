{
    "name": "data-flow-analysis-web-editor",
    "version": "0.0.0",
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/DataFlowAnalysis/OnlineEditor.git"
    },
    "type": "module",
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.3",
        "@eslint/js": "^9.39.2",
        "@fortawesome/fontawesome-free": "^7.0.0",
        "@vscode/codicons": "^0.0.44",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "husky": "^9.1.7",
        "inversify": "^6.2.2",
        "lint-staged": "^16.2.7",
        "monaco-editor": "^0.52.2",
        "prettier": "^3.8.1",
        "reflect-metadata": "^0.2.2",
        "sprotty": "^1.4.0",
        "sprotty-elk": "^1.4.0",
        "sprotty-protocol": "^1.4.0",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.54.0",
        "vite": "^7.3.1",
        "snabbdom-to-html": "^7.1.0"
    },
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "format": "prettier --write \"./**/*.{html,css,ts,tsx,json}\"",
        "lint": "eslint --max-warnings 0 --no-warn-ignored",
        "prepare": "cd ../../ && husky ./frontend/webEditor/.husky",
        "postprepare": "npm run fetch-hash",
        "prebuild": "npm run fetch-hash",
        "predev": "npm run fetch-hash",
        "fetch-hash": "node ./scripts/fetchHash.js"
    },
    "lint-staged": {
        "*.{html,css,ts,tsx,json}": [
            "npm run lint",
            "npm run format"
        ]
    }
}
